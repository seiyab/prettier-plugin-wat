{
	"compilerOptions": {
		/* Visit https://aka.ms/tsconfig to read more about this file */
		"target": "es2019",
		"module": "esnext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		"noEmit": true
	},
	"include": ["lib/**/*.ts", "tests/**/*.ts", "scripts/*.mjs", "*.mjs", "*.ts"]
}
