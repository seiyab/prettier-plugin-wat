{
	"name": "prettier-plugin-wat",
	"version": "0.0.1-alpha.0",
	"files": [
		"dist/**/*"
	],
	"description": "Prettier plugin for WebAssembly Text format",
	"keywords": [
		"prettier",
		"wasm"
	],
	"license": "MIT",
	"author": "Seiya",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "./scripts/build.mjs",
		"prepublishOnly": "npm run build",
		"test": "npm run build && vitest run",
		"test:update-snapshots": "npm run build && vitest run --update",
		"lint": "prettier -c . && tsc && eslint .",
		"check": "npm run lint && npm test",
		"format": "prettier -w ."
	},
	"devDependencies": {
		"@eslint/js": "^9.31.0",
		"@types/node": "^24.1.0",
		"esbuild": "^0.25.0",
		"eslint": "^8.57.1",
		"prettier": "^3.6.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.37.0",
		"vitest": "3.1.4"
	}
}
